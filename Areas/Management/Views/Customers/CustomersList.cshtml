@model IEnumerable<WebApp.Areas.Management.Models.ClientsCategories.CustomerViewModel>
@{ await Html.RenderPartialAsync("ManagementNavigationPanel"); }
@{ ViewData["Title"] = "Клиенты"; }

<style>
    .main-container {
        margin-right: 180px;
    }

    .control-menu {
        float: left;
        width: 300px;
    }

    .form-menu {
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
        padding: 10px;
        border: 1px solid dimgray;
    }

    .items-container {
        float: left;
        margin-left: 20px;
        margin-bottom: 60px;
    }

    .item-container {
        padding: 10px;
        border: 1px solid dimgray;
        display: inline-block;
    }

        .item-container:hover {
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.5);
        }

    .form-control:focus {
        border-color: dimgray;
        box-shadow: 0px 1px 1px rgba(0, 0, 0, 0) inset, 0px 0px 8px rgba(0, 0, 0, 0);
    }
</style>

<div class="main-container">
    <div class="control-menu">
        <div class="form-menu">
            <h3>Клиенты</h3>
            <div></div>
            <hr style="background-color: dimgray; height: 1px;" />
            <form asp-area="Management" asp-action="CustomersList" asp-controller="ClientsCategories" method="get">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" style="font-weight: bold">Поиск</label>
                    <div class="col-sm-8">
                        <input class="form-control" style="border-radius: 0px;" type="search" name="search" value="@ViewBag.SearchData" />
                    </div>
                </div>
                <hr style="background-color: dimgray; height: 1px;" />
                <div class="form-group">
                    <input class="btn btn-outline-dark btn-block" style="border-radius: 0px;" type="submit" value="Принять" />
                </div>
            </form>
        </div>
    </div>
    <div class="items-container">
        @foreach (var item in Model)
        {
            <div class="item-container">
                <table>
                    <tr>
                        <td style="vertical-align: top;">
                            <div>
                                <img class="img-thumbnail" style="border: 4px solid dimgray;" src="@Url.Content(item.ImagePath)" width="64" alt="Profile Image" />
                            </div>
                        </td>
                        <td style="vertical-align: top;">
                            <div style="margin-left: 10px;">
                                <h4>@item.UserName</h4>
                                <p>
                                    <b>ФИО:</b><span> @item.FIO</span>
                                    <b>Адрес:</b><span> @item.Address</span>
                                    <b>Номер телефона:</b><span> @item.PhoneNumber</span>
                                    <b>Категория:</b><span> @item.CategoryName</span>
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="margin-top: 10px"></div>
        }
    </div>
</div>


