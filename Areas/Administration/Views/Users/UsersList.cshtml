@model IEnumerable<WebApp.Areas.Administration.Models.Users.UserRecordViewModel>
@{ await Html.RenderPartialAsync("AdministrationNavigationPanel"); }
@{ ViewData["Title"] = "Список пользователей"; }

<style>
    .main-container {
        margin-right: 180px;
    }

    .form-menu {
        border: 1px solid dimgray;
        padding-top: 14px;
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
    }

    .item-container {
        padding: 10px;
        border: 1px solid dimgray;
    }

        .item-container:hover {
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.5);
        }

    .form-control:focus {
        border-color: dimgray;
        box-shadow: 0px 1px 1px rgba(0, 0, 0, 0) inset, 0px 0px 8px rgba(0, 0, 0, 0);
    }
</style>

<div class="main-container">
    <div class="container form-menu">
        <h3>Список пользователей</h3>
        <div></div>
        <hr style="background-color: dimgray; height: 1px;" />
        <form asp-area="Administration" asp-action="UsersList" asp-controller="Users" method="get">
            <div class="form-group row">
                <div class="col-sm-4">
                    <input class="form-control" style="border-radius: 0px;" type="search" name="search" value="@ViewBag.SearchData" />
                </div>
                <div class="col-sm-1">
                    <input class="btn btn-outline-dark" style="border-radius: 0px;" type="submit" value="Принять" />
                </div>
            </div>
        </form>
    </div>

    <div style="margin-top: 20px;">
        @foreach (var item in Model)
        {
            <div class="item-container">
                <table>
                    <tr>
                        <td>
                            <div>
                                <img class="img-thumbnail" style="border: 4px solid dimgray;" src="@Url.Content(item.ImagePath)" width="64" alt="Profile Image" />
                            </div>
                        </td>
                        <td style="vertical-align: top;">
                            <div style="margin-left: 10px;">
                                <h4>@item.UserName</h4>
                                <p>
                                    <b>Email:</b><span> @item.Email</span><br />
                                    <b>Роль:</b><span> @item.RoleName</span><br />
                                    <b>Дата регистрации:</b><span> @item.RegistrationDate</span>
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="margin-top: 10px;"></div>
        }
    </div>
</div>