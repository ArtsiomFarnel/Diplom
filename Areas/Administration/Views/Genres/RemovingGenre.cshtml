@model WebApp.Models.Database.Entities.Genre
@{ ViewData["Title"] = "Удаление жанра"; }

<style>
    .main-container {
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
        border: 1px solid dimgray;
        margin-left: 100px;
        margin-right: 100px;
        padding: 10px;
    }
</style>

<div class="main-container">
    <h4>Удаление жанра</h4>
    <form asp-area="Administration" asp-controller="Genres" asp-action="RemovingGenre" method="post">
        <div class="form-group row">
            <label class="col-form-label col-sm-2" style="text-align: right; font-weight: bold" asp-for="Name">Логин:</label>
            <div class="col-sm-4">
                <input class="form-control-plaintext" style="border-radius: 0px;" type="text" readonly value="@Model.Name">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-sm-6">
                <a class="btn btn-outline-dark" style="border-radius: 0px;" asp-area="Administration" asp-action="GenresList" asp-controller="Genres">Назад</a>
                <input class="btn btn-outline-dark" style="border-radius: 0px;" type="submit" value="Удалить" />
            </div>
        </div>
    </form>
</div>