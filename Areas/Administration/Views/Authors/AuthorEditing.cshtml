@model WebApp.Areas.Administration.Models.Authors.AuthorDataRecordViewModel
@{ ViewData["Title"] = "Изменение автора"; }

<style>
    .main-container {
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
        border: 1px solid dimgray;
        margin-left: 100px;
        margin-right: 100px;
        padding: 10px;
    }

    .form-control:focus {
        border-color: dimgray;
        box-shadow: 0px 1px 1px rgba(0, 0, 0, 0) inset, 0px 0px 8px rgba(0, 0, 0, 0);
    }
</style>

<div class="main-container">
    <h4>Изменение автора</h4>
    <form asp-area="Administration" asp-controller="Authors" asp-action="AuthorEditing" asp-antiforgery="true" enctype="multipart/form-data">
        <div class="form-group row">
            <label class="col-form-label col-sm-2" style="text-align: right; font-weight: bold" asp-for="Author.Name">Имя:</label>
            <div class="col-sm-4">
                <input class="form-control" style="border-radius: 0px;" type="text" asp-for="Author.Name" value="@Model.Author.Name" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Author.Name" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" style="text-align: right; font-weight: bold" asp-for="Author.Description">Описание:</label>
            <div class="col-sm-4">
                <textarea class="form-control" style="border-radius: 0px; resize: none" asp-for="Author.Description" data-val-maxlength-max="5000" rows="5" cols="40" data-val="true">@Model.Author.Name</textarea>
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Author.Description" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" style="text-align: right; font-weight: bold" asp-for="PreviewImage">Изображение</label>
            <div class="col-sm-4">
                <input class="form-control-file" asp-for="PreviewImage" type="file" />
            </div>
        </div>
        <div>
            <input asp-for="Author.Id" value="@Model.Author.Id" hidden />
            <input asp-for="Author.ImagePath" value="@Model.Author.ImagePath" hidden />
        </div>
        <div class="form-group row">
            <div class="offset-2 col-sm-6">
                <a class="btn btn-outline-dark" style="border-radius: 0px;" asp-area="Administration" asp-action="AuthorsList" asp-controller="Authors">Назад</a>
                <input class="btn btn-outline-dark" style="border-radius: 0px;" type="submit" value="Добавить" />
            </div>
        </div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </form>
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}